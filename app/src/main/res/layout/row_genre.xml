<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/application_list_padding"
              android:paddingRight="@dimen/application_list_padding"
              android:paddingBottom="@dimen/application_list_padding"
              android:paddingLeft="@dimen/application_list_left_padding"
              android:background="@color/genre_background">
    <ImageView
        android:id="@+id/genre_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/caption_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingLeft="@dimen/application_list_padding"
        android:paddingRight="@dimen/application_list_padding"
        android:gravity="center_vertical"/>
</LinearLayout>